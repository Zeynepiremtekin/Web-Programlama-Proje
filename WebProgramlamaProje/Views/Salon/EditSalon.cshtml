@model WebProgramlamaProje.Models.Salon

<h2>Salon Düzenle</h2>

<form asp-action="EditSalon" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="SalonId" />

    <div class="form-group">
        <label for="Name">Salon Adı</label>
        <input asp-for="Name" class="form-control" id="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Address">Adres</label>
        <input asp-for="Address" class="form-control" id="Address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="PhoneNumber">Telefon</label>
        <input asp-for="PhoneNumber" class="form-control" id="PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a class="btn btn-secondary" asp-action="ViewSalons">Geri</a>
</form>
