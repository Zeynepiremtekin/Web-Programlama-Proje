@model WebProgramlamaProje.Models.Salon

<style>
    /* Form Title */
    .form-title {
        color: #e8b44b;
        font-weight: bold;
        border-radius: 30px;
        padding: 10px;
        background: linear-gradient(90deg, black, #3a3a3a);
        margin-bottom: 20px;
        margin-top: 50px;
        text-align: center;
    }

    /* Form Styling */
    .form-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        font-family: cursive;
    }

    .form-group label {
        color: #3a3a3a;
        font-weight: bold;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ccc;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        /* Focused Input */
        .form-control:focus {
            border-color: #000; /* Siyah kenar */
            box-shadow: 0 0 4px rgba(0, 0, 0, 0.6); /* Hafif siyah gölge */
            outline: none;
        }

    .btn-primary {
        background-color: #e8b44b;
        color: #1a1a1a;
        border-radius: 20px;
        font-weight: bold;
        transition: all 0.3s ease-in-out;
        border: none; /* Çerçeve kaldırıldı */
        outline: none; /* Focus çerçevesi kaldırıldı */
    }

        .btn-primary:hover {
            background-color: #1a1a1a;
            color: #e8b44b;
        }

    .btn-secondary {
        background-color: #f8f9fa;
        color: #1a1a1a;
        border-radius: 20px;
        border: 1px solid #1a1a1a;
        font-weight: bold;
        transition: all 0.3s ease-in-out;
    }

        .btn-secondary:hover {
            background-color: #1a1a1a;
            color: #f8f9fa;
        }

    .current-image {
        margin-top: 10px;
    }

        .current-image img {
            width: 150px;
            height: auto;
            border-radius: 10px;
        }
</style>

<h2 class="form-title">Edit Salon</h2>

<div class="container form-container">
    <form asp-action="EditSalon" method="post" enctype="multipart/form-data">
        <!-- Salon ID -->
        <input type="hidden" asp-for="SalonId" />
        <!-- Mevcut resim yolunu korumak için -->
        <input type="hidden" asp-for="ImagePath" />

        <!-- Salon Name -->
        <div class="form-group mb-3">
            <label asp-for="Name">Salon Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Address -->
        <div class="form-group mb-3">
            <label asp-for="Address">Address</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <!-- Phone Number -->
        <div class="form-group mb-3">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <!-- Working Hours -->
        <div class="form-group mb-3">
            <label asp-for="WorkingHours">Working Hours</label>
            <input asp-for="WorkingHours" class="form-control" placeholder="e.g., 09:00 - 18:00" />
            <span asp-validation-for="WorkingHours" class="text-danger"></span>
        </div>

        <!-- Image Upload -->
        <div class="form-group mb-3">
            <label for="imageFile">Change Image</label>
            <input type="file" name="imageFile" class="form-control" />
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="current-image">
                    <p>Current Image:</p>
                    <img src="@Model.ImagePath" alt="@Model.Name" />
                </div>
            }
        </div>

        <!-- Buttons -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-4 py-2">Save</button>
            <a asp-action="ViewSalons" class="btn btn-secondary px-4 py-2">Cancel</a>
        </div>
    </form>
</div>


