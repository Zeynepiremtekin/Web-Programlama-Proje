@model WebProgramlamaProje.Models.Salon

@{
    ViewData["Title"] = "Create Salon";
}

<h2>Create New Salon</h2>

<form asp-action="CreateSalon" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Salon Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label">Address</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WorkingHours" class="control-label">Working Hours</label>
        <input asp-for="WorkingHours" class="form-control" placeholder="e.g., 09:00 - 18:00" />
        <span asp-validation-for="WorkingHours" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="imageFile" class="control-label">Salon Image</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="ViewSalons" class="btn btn-secondary">Cancel</a>
</form>
