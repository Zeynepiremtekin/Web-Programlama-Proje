@model IEnumerable<WebProgramlamaProje.Models.Salon>

<h2>Salonlar</h2>

<table class="table">
    <thead>
        <tr>
            <th>Salon Adı</th>
            <th>Adres</th>
            <th>Telefon</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var salon in Model)
        {
            <tr>
                <td>@salon.Name</td>
                <td>@salon.Address</td>
                <td>@salon.PhoneNumber</td>
                <td>
                    <a class="btn btn-primary" asp-action="EditSalon" asp-route-id="@salon.SalonId">Düzenle</a>
                    <form asp-action="DeleteSalon" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@salon.SalonId" />
                        <button class="btn btn-danger" onclick="return confirm('Bu salonu silmek istediğinize emin misiniz?');">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" asp-action="CreateSalon">Yeni Salon Ekle</a>
