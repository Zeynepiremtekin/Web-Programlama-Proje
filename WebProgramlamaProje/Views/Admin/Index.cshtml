@{
    ViewData["Title"] = "Admin Panel";
}

<style>
    body {
        font-family: cursive;
        background-color: #f8f9fa;
    }

    h2 {
        color: #e8b44b;
        font-weight: bold;
        text-transform: uppercase;
    }

    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background-color: #fff;
        border: none;
    }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 15px rgba(0, 0, 0, 0.2);
        }

    .btn {
        font-size: 1rem;
        font-weight: bold;
        transition: all 0.3s ease-in-out;
    }

    .btn-dark {
        background-color: #1f1f1f;
        color: #e8b44b;
        border: none;
    }

        .btn-dark:hover {
            background-color: #e8b44b;
            color: #1f1f1f;
        }

    .card-text {
        font-size: 0.9rem;
    }
</style>



<section id="admin-panel" class="py-5" style="background-color: #f8f9fa;">
    <div class="container text-center">
        <h2 class="mb-5" style="color: #e8b44b; font-weight: bold;">Admin Management Panel</h2>

        <!-- Yönetim Kartları -->
        <div class="row">
            <!-- Salonları Listele -->
            <div class="col-md-4 mb-4">
                <div class="card shadow border-0" style="border-radius: 15px;">
                    <div class="card-body py-5">
                        <h5 class="card-title" style="color: #e8b44b; font-weight: bold;">View Salons</h5>
                        <p class="card-text text-muted">List, update, and manage registered salons.</p>
                        <a asp-action="ViewSalons" asp-controller="Salon" class="btn btn-dark px-4 py-2" style="border-radius: 50px;">
                            Go to Salons
                        </a>
                    </div>
                </div>
            </div>

            <!-- Çalışanları Listele -->
            <div class="col-md-4 mb-4">
                <div class="card shadow border-0" style="border-radius: 15px;">
                    <div class="card-body py-5">
                        <h5 class="card-title" style="color: #e8b44b; font-weight: bold;">View Employees</h5>
                        <p class="card-text text-muted">Manage employees across different salons.</p>
                        <a asp-action="ViewEmployees" asp-controller="Employee" class="btn btn-dark px-4 py-2" style="border-radius: 50px;">
                            Go to Employees
                        </a>
                    </div>
                </div>
            </div>

            <!-- Hizmetleri Listele -->
            <div class="col-md-4 mb-4">
                <div class="card shadow border-0" style="border-radius: 15px;">
                    <div class="card-body py-5">
                        <h5 class="card-title" style="color: #e8b44b; font-weight: bold;">View Services</h5>
                        <p class="card-text text-muted">Add, update, or remove beauty services.</p>
                        <a asp-action="ViewServices" asp-controller="Service" class="btn btn-dark px-4 py-2" style="border-radius: 50px;">
                            Go to Services
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow border-0" style="border-radius: 15px;">
                    <div class="card-body py-5">
                        <h5 class="card-title" style="color: #e8b44b; font-weight: bold;">View Appointments</h5>
                        <p class="card-text text-muted">Review and manage appointments.</p>
                        <a asp-action="ViewAdminAppointments" asp-controller="Appointment" class="btn btn-dark px-4 py-2" style="border-radius: 50px;">
                            Go to Appointments
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
