@model WebProgramlamaProje.Models.Employee

<h2>Çalışan Düzenle</h2>

<form asp-action="EditEmployee" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="EmployeeId" />

    <div class="form-group">
        <label for="SalonId">Salon</label>
        <select asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonList">
            <option value="">Salon Seçin</option>
        </select>
        <span asp-validation-for="SalonId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Name">Adı</label>
        <input asp-for="Name" class="form-control" id="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Surname">Soyadı</label>
        <input asp-for="Surname" class="form-control" id="Surname" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a class="btn btn-secondary" asp-action="ViewEmployees" asp-route-salonId="@Model.SalonId">Geri</a>
</form>
