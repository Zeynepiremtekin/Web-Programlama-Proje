@model WebProgramlamaProje.Models.Employee

<h2>Yeni Çalışan Ekle</h2>

<form asp-action="AddEmployee" method="post">
    <div class="form-group">
        <label>Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Soyadı</label>
        <input asp-for="Surname" class="form-control" />
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Salon</label>
        <select asp-for="SalonId" asp-items="ViewBag.SalonList" class="form-control">
            <option value="">Salon Seçiniz</option>
        </select>
        <span asp-validation-for="SalonId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>

<a asp-action="ViewEmployees" class="btn btn-secondary">Geri</a>
