@model List<WebProgramlamaProje.Models.Appointment>

@{
    ViewData["Title"] = "Randevu Yönetimi";
}

<h2>Randevuları Yönet</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Kullanıcı</th>
            <th>Salon</th>
            <th>Çalışan</th>
            <th>Hizmet</th>
            <th>Tarih ve Saat</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.User.Name</td>
                <td>@appointment.Salon.Name</td>
                <td>@appointment.Employee.Name @appointment.Employee.Surname</td>
                <td>@appointment.Service.Name</td>
                <td>@appointment.AppointmentDateTime.ToString("g")</td>
                <td>@(appointment.IsConfirmed ? "Onaylandı" : "Onay Bekliyor")</td>
                <td>
                    <form asp-action="Confirm" asp-route-id="@appointment.AppointmentId" method="post" style="display:inline-block;">
                        <button type="submit" class="btn btn-success btn-sm">Onayla</button>
                    </form>

                    <form asp-action="Reject" asp-route-id="@appointment.AppointmentId" method="post" style="display:inline-block;">
                        <button type="submit" class="btn btn-warning btn-sm">Onaylama</button>
                    </form>

                    <form asp-action="Delete" asp-route-id="@appointment.AppointmentId" method="post" style="display:inline-block;">
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
