@using System.Linq
@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebProgramlamaProje</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebProgramlamaProje.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


    <style>

        
       
            
        /* Dropdown Menü İçindeki Item */
        .custom-dropdown-item {
            color: #e8b44b;
            font-family: cursive;
            font-size: 1rem;
            padding: 10px 20px;
            transition: background 0.3s ease, transform 0.2s ease-in-out;
        }

            /* Hover Efekti */
            .custom-dropdown-item:hover {
                background-color: #e8b44b;
                color: #1f1f1f;
                transform: translateX(5px); /* Hafif sağa kayma */
                font-weight: bold;
            }

            /* Logout Butonu İçin Ek Ayarlar */
            .custom-dropdown-item button {
                background: none;
                border: none;
                padding: 0;
                cursor: pointer;
            }

        /* Dropdown Menü Ok İşareti */
        .custom-dropdown-menu::before {
            content: '';
            display: block;
            position: absolute;
            top: -10px;
            left: 10px;
            width: 0;
            height: 0;
            border-left: 10px solid transparent;
            border-right: 10px solid transparent;
            border-bottom: 10px solid #2c2c2c; /* Menü arkaplanına uyumlu renk */
        }

        .carousel {
            border-radius: 40px; 
            overflow: hidden;
            margin: 10px auto; 
            margin-top:-50px;
            width: 100%; 
        }

        /* Slider Görselleri İçin */
        .carousel-inner img {
            border-radius: 30px; 
            object-fit: cover; 
            height:550px;
        }


        /* Slider üzerindeki buton */
        .carousel-caption {
            position: absolute;
            bottom: 20%;
            left: 50%;
            transform: translateX(-50%);
        }

            .carousel-caption .btn {
                background: black;
                color: #e8b44b;
                border: none;
                padding: 10px 20px;
                font-size: 1rem;
                font-weight: bold;
                font-family: cursive;
                border-radius: 50px;
                outline: none;
                box-shadow: none;
                transition: background 0.3s ease-in-out;
            }

                .carousel-caption .btn:hover {
                    color: white;
                    font-weight: bold;
                    transition: all 0.3s ease-in-out;
                    text-shadow: 0 0 6px rgba(232, 180, 75, 0.6);
                    position: relative;
                    background-color: #e8b44b;
                    outline: none;
                    box-shadow: none;
                }

        .carousel-indicators [data-bs-target] {
            background-color: #e8b44b;
            width: 12px;
            height: 12px;
            border-radius: 50%;
        }

        .carousel-indicators .active {
            background-color: #d4a538;
            width: 15px;
            height: 15px;
            animation: pulse 1s infinite;
        }


        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            filter: invert(1);
        }




        .services-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;

        }

        /* Card Style */
        .service-card {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease;
        }

            .service-card:hover {
                transform: translateY(-10px);
            }

        .service-content {
            padding: 20px;
            text-align: center;
            font-family: cursive;
        }


            .service-content p {
                font-size: 1rem;
                color: #777;
                margin-bottom: 15px;
            }

        .service-btn {
            background: black;
            color: #e8b44b;
            border: none;
            padding: 10px 20px;
            font-size: 1rem;
            font-weight: bold;
            font-family: cursive;
            border-radius: 50px;
            outline: none;
            box-shadow: none;
            transition: background 0.3s ease-in-out;
        }

            .service-btn:hover {
                background-color: #e8b44b;
                color: white;
                outline: none;
                box-shadow: none;
            }

        .service-card:hover .service-content h3 {
            color: #e8b44b; /* Change color on hover */
        }

        .custom-toggler {
            border: none;
            background-color: #e8b44b;
            padding: 10px 15px;
            border-radius: 50%;
        }

            .custom-toggler span {
                display: block;
                width: 20px;
                height: 4px;
                margin: 4px auto;
                background-color: #1a1a1a;
                transition: all 0.3s ease-in-out;
            }

            .custom-toggler:hover {
                transform: scale(1.2);
                transition: all 0.3s ease-in-out;
            }
    </style>
</head>

<body>
    <header>
        <!-- Slider -->
        <div id="serviceCarousel" class="carousel slide" data-bs-ride="carousel">
            <!-- Göstergeler -->
            <div class="carousel-indicators">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <button type="button" data-bs-target="#serviceCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "")" aria-label="Slide @i"></button>
                }
            </div>

            <!-- Slider İçeriği -->
            <div class="carousel-inner">
                @if (Model != null && Model.Count > 0)
                {
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var service = Model[i];
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="@(string.IsNullOrEmpty(service.ImagePath) ? "/images/default.png" : service.ImagePath)" class="d-block w-100" alt="@service.Name">
                            <div class="carousel-caption">
                                @if (!string.IsNullOrEmpty(service.VideoUrl))
                                {
                                    <button onclick="window.open('@service.VideoUrl', '_blank')" class="btn">@service.Name</button>
                                }
                                else
                                {
                                    <span class="btn disabled">@service.Name</span>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-center text-muted">No services available to display.</p>
                }

            </div>

            <!-- Oklar -->
            <button class="carousel-control-prev" type="button" data-bs-target="#serviceCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#serviceCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </header>
</body>
</html>