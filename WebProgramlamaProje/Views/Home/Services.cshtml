@model IEnumerable<WebProgramlamaProje.Models.Service>

<style>
    .section-title {
        color: #e8b44b;
        font-weight: bold;
        border-radius: 30px;
        padding: 10px;
        background: linear-gradient(90deg, black, #3a3a3a);
        margin-bottom: 30px;
        margin-top: 50px;
        text-align: center;
        font-family: cursive;
    }

    .service-card {
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        transition: transform 0.3s ease;
        height: 450px; /* Fixed height for consistency */
        display: flex;
        flex-direction: column;
    }

        .service-card:hover {
            transform: translateY(-5px);
        }

    .service-image {
        height: 200px;
        width: 100%;
        object-fit: cover;
    }

    .service-details {
        padding: 15px;
        font-family: cursive;
        text-align: center;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .service-btn {
        background-color: #000;
        color: #e8b44b;
        font-size: 1rem;
        font-weight: bold;
        border: none;
        border-radius: 50px;
        padding: 10px 20px;
        transition: all 0.3s ease;
        cursor: pointer;
        text-decoration: none;
        width: fit-content;
        margin: 0 auto; /* Center the button horizontally */
    }

        .service-btn:hover {
            background-color: #e8b44b;
            color: #fff;
        }

    .service-description {
        font-size: 0.9rem;
        color: #555;
        margin: 10px 0;
        flex-grow: 1;
        overflow-y: auto; /* Add scroll for extra-long descriptions */
    }

    .service-meta {
        font-size: 0.9rem;
        color: #333;
        margin-top: 10px;
    }
</style>

<h2 class="section-title">Our Services</h2>

<div class="container">
    <div class="row">
        @foreach (var service in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="service-card">
                    <!-- Service Image -->
                    @if (!string.IsNullOrEmpty(service.ImagePath))
                    {
                        <img src="@service.ImagePath" alt="@service.Name" class="service-image" />
                    }
                    else
                    {
                        <img src="/images/default-service.png" alt="Default Service Image" class="service-image" />
                    }

                    <!-- Service Details -->
                    <div class="service-details">
                        <!-- Service Name as Button -->
                        <button onclick="window.open('@service.VideoUrl', '_blank')" class="service-btn">@service.Name</button><br /><br />

                        <!-- Description -->
                        <p class="service-description">@service.Description</p>

                        <!-- Meta Information -->
                        <p class="service-meta">
                            <strong>Price:</strong> @string.Format("{0:C}", service.Price)<br />
                            <strong>Duration:</strong> @service.Duration minutes
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

