@model WebProgramlamaProje.Models.Service

<h2>Hizmeti Düzenle</h2>

<form asp-action="EditService" method="post">
    <input type="hidden" asp-for="ServiceId" />

    <div class="form-group">
        <label for="Name">Hizmet Adı</label>
        <input asp-for="Name" class="form-control" placeholder="Hizmet Adı" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Duration">Süre (Dakika)</label>
        <input asp-for="Duration" class="form-control" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Price">Fiyat (₺)</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
    <a asp-action="ViewServices" class="btn btn-secondary">Geri</a>
</form>
