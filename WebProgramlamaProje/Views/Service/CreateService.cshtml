@model WebProgramlamaProje.Models.Service

<h2>Yeni Hizmet Ekle</h2>

<form asp-action="CreateService" method="post">
    <div class="form-group">
        <label for="Name">Hizmet Adı</label>
        <input asp-for="Name" class="form-control" placeholder="Hizmet Adı Giriniz" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Duration">Süre (Dakika)</label>
        <input asp-for="Duration" class="form-control" placeholder="Örn: 60" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Price">Fiyat (₺)</label>
        <input asp-for="Price" class="form-control" placeholder="Örn: 200.00" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="ViewServices" class="btn btn-secondary">Geri</a>
</form>
