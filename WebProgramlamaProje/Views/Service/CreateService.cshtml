@model WebProgramlamaProje.Models.Service

<style>
    /* Form Title */
    .form-title {
        color: #e8b44b;
        font-weight: bold;
        border-radius: 30px;
        padding: 10px;
        background: linear-gradient(90deg, black, #3a3a3a);
        margin-bottom: 20px;
        margin-top: 50px;
        text-align: center;
    }

    /* Form Styling */
    .form-container {
        background-color: #fff;
        padding: 30px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        font-family: cursive;
    }

    .form-group label {
        color: #3a3a3a;
        font-weight: bold;
    }

    .form-control {
        border-radius: 10px;
        border: 1px solid #ccc;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        /* Focused Input */
        .form-control:focus {
            border-color: #000; /* Siyah kenar */
            box-shadow: 0 0 4px rgba(0, 0, 0, 0.6); /* Hafif siyah gölge */
            outline: none;
        }

    .btn-primary {
        background-color: #e8b44b;
        color: #1a1a1a;
        border-radius: 20px;
        border: none;
        font-weight: bold;
        transition: all 0.3s ease-in-out;
    }

        .btn-primary:hover {
            background-color: #1a1a1a;
            color: #e8b44b;
        }

    .btn-secondary {
        background-color: #f8f9fa;
        color: #1a1a1a;
        border-radius: 20px;
        border: 1px solid #1a1a1a;
        font-weight: bold;
        transition: all 0.3s ease-in-out;
    }

        .btn-secondary:hover {
            background-color: #1a1a1a;
            color: #f8f9fa;
        }
</style>

<h2 class="form-title">Create New Service</h2>

<div class="container form-container">
    <form asp-action="CreateService" enctype="multipart/form-data">
        <!-- Service Name -->
        <div class="form-group mb-3">
            <label asp-for="Name">Service Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Duration -->
        <div class="form-group mb-3">
            <label asp-for="Duration">Duration (Minutes)</label>
            <input asp-for="Duration" class="form-control" type="number" />
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        <!-- Price -->
        <div class="form-group mb-3">
            <label asp-for="Price">Price (₺)</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div class="form-group mb-3">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Video URL -->
        <div class="form-group mb-3">
            <label asp-for="VideoUrl">Video URL</label>
            <input asp-for="VideoUrl" class="form-control" placeholder="e.g., https://www.youtube.com/watch?v=..." />
            <span asp-validation-for="VideoUrl" class="text-danger"></span>
        </div>

        <!-- Image Upload -->
        <div class="form-group mb-3">
            <label for="imageFile">Service Image</label>
            <input type="file" name="imageFile" class="form-control" />
        </div>

        <!-- Buttons -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary px-4 py-2">Create</button>
            <a asp-action="ViewServices" class="btn btn-secondary px-4 py-2">Cancel</a>
        </div>
    </form>
</div>
